<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLocked"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cacl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cacl_date"
            app:layout_constraintStart_toStartOf="@id/cacl_date"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="11:22" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cacl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cacl_time"
            tools:text="01.01.23" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cacl_with_tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/cacl_date"
            app:layout_constraintEnd_toStartOf="@id/cacl_without_tax"
            app:layout_constraintStart_toEndOf="@id/cacl_date"
            app:layout_constraintTop_toTopOf="@id/cacl_time"
            tools:text="$12,000,000.00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cacl_without_tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/cacl_date"
            app:layout_constraintEnd_toStartOf="@id/cacl_tax"
            app:layout_constraintStart_toEndOf="@id/cacl_with_tax"
            app:layout_constraintTop_toTopOf="@id/cacl_time"
            tools:text="$10,000,000.00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cacl_tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/cacl_date"
            app:layout_constraintEnd_toStartOf="@id/calc_is_locked"
            app:layout_constraintStart_toEndOf="@id/cacl_without_tax"
            app:layout_constraintTop_toTopOf="@id/cacl_time"
            tools:text="$2,000,000.00" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/calc_is_locked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@id/cacl_date"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cacl_time"
            app:lockStatus="@{isLocked}"
            tools:src="@drawable/lock_open" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cacl_date" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>